
@{
    Layout = "_DashboardLayout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="text-center">
                <div class="row my-4">
                    <div class="col-md-8 mx-auto">
                        <img src="/img/sales.svg" alt="Sales SVG" class="img-fluid" />
                    </div>
                </div>
                <p class="h3">Sales History</p>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div my-4>
        @*Handle View Customer History*@
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="bg-white p-5 rounded shadow">
                    <form action="" method="post">
                        <!-- Author Input -->
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-book text-muted"></i>
                                </span>
                            </div>
                            <select id="customer" name="customer" class="form-control custom-select bg-white border-left-0 border-md">
                                <option value="">Please choose a customer</option>
                                <option value="">James</option>
                                <option value="">John</option>
                                <option value="">Joseph</option>
                                <option value="">Judah</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary">View Customer History<i class="fas fa-eye ml-2"></i></button>
                        </div>
                    </form>

                    <p class="text-center font-weight-bold my-3">OR</p>

                    <h5 class="font-weight-light mb-4 font-italic text-center">Search for the customer</h5>
                    <form action="">
                        <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
                            <div class="input-group">
                                <input type="search" placeholder="Enter customer name here.." aria-describedby="button-addon1" class="form-control border-0 bg-light">
                                <div class="input-group-append">
                                    <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row my-4">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow">
                    <div class="card-body p-5">
                        <div class="my-3">
                            <a href="@Url.ActionLink("MakeSales", "Sales")" class="btn btn-primary">Insert New Sale <i class="fas fa-cart-plus ml-2"></i></a>
                        </div>
                        <div class="table-responsive">
                            <table style="width:100%" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Sale ID</th>
                                        <th scope="col">Sale Date</th>
                                        <th scope="col">Sale Total</th>
                                        <th scope="col">Customer</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <th>Sale 101</th>
                                        <td>26 April, 2021</td>
                                        <td>Rs 1500</td>
                                        <td>9813029480</td>
                                        <td>
                                            <ul class="list-inline m-0">
                                                <li class="list-inline-item">
                                                    <a href="@Url.ActionLink("SaleItems", "Sales")" class="btn btn-warning btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="View Sale Items"><i class="fa fa-table"></i></a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
