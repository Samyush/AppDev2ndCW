
@{ Layout = "_DashboardLayout"; }

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="text-center">
                <p class="h3">Long Stocked Items</p>
                <p><code>These books have been in stock for a long time</code></p>
                <div class="row my-4">
                    <div class="col-md-8 mx-auto">
                        <img src="/img/long_stocked.svg" alt="Out of Stock SVG" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div my-4>
        <div class="row py-5">
            <div class="col-lg-11 mx-auto">
                <div class="card rounded shadow border-0">
                    <div class="card-body p-5 bg-white rounded">
                        <div class="table-responsive">
                            <table id="example" style="width:100%" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Author</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Stocked Date</th>
                                        <th scope="col">Stock Quantity</th>
                                        <th scope="col">Sales Date</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <th scope="row">1</th>
                                        <td>The Alchemist</td>
                                        <td>Paulo Coehelo</td>
                                        <td>Novels</td>
                                        <td>26 April, 2021</td>
                                        <td>100</td>
                                        <td>28 April, 2021</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button class="btn btn-primary px-4">Remove all Books from Stock <i class="fas fa-minus-square ml-2"></i></button>
        </div>

    </div>
</div>
